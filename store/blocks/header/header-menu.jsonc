{
	"flex-layout.row#header-menu": {
		"children": ["flex-layout.col#header-menu", "flex-layout.col#offer-menu"],
		"props": {
			"blockClass": "header-menu",
			"horizontalAlign": "between",
			"paddingTop": 6,
			"paddingBottom": 6
		}
	},
	"flex-layout.col#header-menu": {
		"children": ["vtex.menu@2.x:menu#header-menu"],
