{
	"store.home": {
		"blocks": ["flex-layout.row#carousel-banner", "flex-layout.row#container-departamentos"]
	},
	"flex-layout.row#container-departamentos": {
		"children": ["flex-layout.col#container-departamentos"],
		"props": {
			"blockClass": "container-departamentos"
		}
	},
	"flex-layout.col#container-departamentos": {
		"props": {
			"width": "grow",
			"horizontalAlign": "center",
			"verticalAlign": "middle"
		},
		"children": ["flex-layout.row#departamento-title", "flex-layout.row#departamento-list"]
	},
	"flex-layout.row#departamento-title": {
		"children": ["rich-text#departamento-title"],
		"props": {
			"blockClass": "departamento-title",
			"paddingTop": 4,
			"paddingBottom": 4
		}
	},
	"rich-text#departamento-title": {
		"props": {
			"blockClass": "departamento-title",
			"text": "Conheça os departamentos que fazem bonito",
			"textAlignment": "CENTER",
			"textPosition": "CENTER",
			"font": "t-heading-3",
			"htmlId": "departamento-title",
			"preventVerticalStretch": true,
			"textColor": "c-action-secondary"
		}
	},
	"flex-layout.row#departamento-list": {
		"children": ["list-context.image-list#departamento-list"],
		"props": {
			"blockClass": "departamento-list"
		}
	},
